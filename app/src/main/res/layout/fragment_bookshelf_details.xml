<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_green"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".SearchDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fragment_relative_layout_bookshelf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/book_thumbnail_bookshelf"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/display_book_name_bookshelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_thumbnail_bookshelf"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textSize="28dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/display_book_authors_bookshelf"
                android:layout_width="wrap_content"
                android:maxWidth="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/display_book_name_bookshelf"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"/>

            <TextView
                android:id="@+id/display_book_description_bookshelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_book_authors_bookshelf"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"/>

            <RatingBar
                android:id="@+id/user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/display_book_description_bookshelf"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>