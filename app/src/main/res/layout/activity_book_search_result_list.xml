<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:paddingTop="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:background="@color/light_green"
    tools:context=".BookSearchList">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/bookshelf_search_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/book_search_result"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:layout_marginBottom="24dp"
                    android:textAlignment="center"/>

                <ListView
                    android:id="@+id/bookshelf_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="10dp"
                    android:divider="@color/light_green"
                    android:background="@color/mid_green"/>

                <ProgressBar
                    android:id="@+id/progress_bar_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
</FrameLayout>